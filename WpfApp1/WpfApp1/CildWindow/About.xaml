<Window Background="#EFF4EA" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" x:Class="WpfApp1.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="关于" Height="300" Width="300">
    <Grid Margin="0,0,0,-23">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center">

            <Label Content="软件：XXXXXXXRS485通信软件"/>
            <Label Content="版本号：RS485_V2025.02.22"/>
            <Label Content="低仿仪表软件"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center">
            <Label Content="公司地址：XXXXXXXXXXXXXX"/>
            <Label Content="邮      编：XXXXXXXXXXXXXX"/>
            <Label Content="电      话：XXXXXXXXXXXXXX"/>
            <Label Content="网      址：XXXXXXXXXXXXXX"/>
            <Label Content="版权所有：XXXXXXXXXXXXXX"/>
        </StackPanel>
        <Button Grid.Row="2" Width="70" Height="20" Content="确定" HorizontalAlignment="Right" Margin="0,0,60,0" Click="Click_Exit"/>
        <Button Grid.Row="2" Width="70" Height="20" Content="说明" HorizontalAlignment="Right" Margin="0,0,150,0"/>
    </Grid>
</Window>
